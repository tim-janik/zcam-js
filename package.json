{
  "name": "zcam-js",
  "version": "0.0.6",
  "license": "MPL-2.0",
  "author": "Tim Janik",
  "bugs": "https://github.com/tim-janik/zcam-js/issues",
  "homepage": "https://github.com/tim-janik/zcam-js",
  "keywords": [
    "ZCAM",
    "colour"
  ],
  "description": "ZCAM color appearance model in JS with related tools and utilities",
  "repository": "github:tim-janik/zcam-js.git",
  "type": "module",
  "scripts": {
    "eslint": "npx eslint src/*.js",
    "test": "concurrently 'node src/math.js' 'node src/hashtable.js' 'node src/zcam.js' 'node src/check.js' 'node src/adaptation.js'"
  },
  "eslintConfig": {
    "parserOptions": {
      "sourceType": "module"
    },
    "env": {
      "es2022": true,
      "browser": true,
      "node": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "rules": {
      "no-loss-of-precision": "off",
      "no-mixed-spaces-and-tabs": "off",
      "no-unused-vars": "warn",
      "no-constant-condition": "off"
    }
  },
  "devDependencies": {
    "concurrently": "^7.0.0",
    "eslint": "^8.10.0"
  }
}
